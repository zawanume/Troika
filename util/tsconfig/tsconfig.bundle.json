{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2021",
    "lib": ["ES2021"],
    "moduleResolution": "Bundler",
    "strict": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "outDir": "../../build/",
    "allowJs": false,
    "skipLibCheck": true,
  },
  "include": [
    "../../src/**/*.ts"
  ],
  "exclude": [
    "../../**/node_modules",
    "../../test",
    "../../util",
    "../../docs",
    "../../dist",
    "../../**/.*/"
  ]
}
