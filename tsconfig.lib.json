{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist/",
    "sourceMap": true,

    "declaration": true,
    "declarationDir": "./typings/",
  },
  "include": [
    "./src/**/*.ts"
  ]
}